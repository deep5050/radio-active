root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.c]
indent_size = 4
c_basic_style = linux
c_brace_style = stroustrup

[*.py]
indent_size = 4
indent_style = space
max_line_length = 79

[*.sh]
indent_size = 2
shell = bash

[Makefile]
indent_style = tab
indent_size = 4
